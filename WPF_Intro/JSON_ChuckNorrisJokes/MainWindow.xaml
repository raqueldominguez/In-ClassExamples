<Window x:Class="JSON_ChuckNorrisJokes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_ChuckNorrisJokes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://images01.military.com/sites/default/files/styles/full/public/2021-04/chucknorris.jpeg.jpg"/>
        </Grid.Background>
        <ComboBox x:Name="cboCategory" HorizontalAlignment="Left" Margin="28,72,0,0" VerticalAlignment="Top" Width="160" Height="37"/>
        <Label Content="Choose a joke category" HorizontalAlignment="Left" Margin="26,16,0,0" VerticalAlignment="Top" Height="34" Width="162" FontSize="14" Background="White"/>
        <Button x:Name="btnSelect" Content="Select" HorizontalAlignment="Left" Margin="66,147,0,0" VerticalAlignment="Top" Height="21" Width="82" Click="btnSelect_Click"/>
        <ListBox x:Name="lstJoke" Margin="573,0,0,217" Background="{x:Null}" Foreground="#FFF41010" FontWeight="Bold"/>

    </Grid>
</Window>
